<div class="box box-primary">
  <div class="box-body">
    <% if @project.time_extensions.present? %>
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th style="text-align:center">Inclusive Dates</th>
              <th style="text-align:center">Number of Day/s</th>
              <th style="text-align:center">Date Created</th>
              <th style="text-align:center">Date Updated</th>
              <th style="text-align:center"><i class="glyphicon glyphicon-cog"></i></th>
            </tr>
          </thead>
          <tbody>
            <% @project.time_extensions.each do |time_extension| %>
            <tr>
              <td style="text-align:center"><%= time_extension.inclusive_dates_of_extension %></td>
              <td style="text-align:center"><%= time_extension.number_of_days %></td>
              <td style="text-align:center"><%= time_extension.created_at %></td>
              <td style="text-align:center"><%= time_extension.updated_at %></td>
              <td style="text-align:center">
                <%= link_to edit_time_extension_path(time_extension) do %>
                  <i class="glyphicon glyphicon-edit"></i>
                <% end %>
                <span>&nbsp&nbsp&nbsp|&nbsp&nbsp&nbsp</span>
                <%= link_to time_extension, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="glyphicon glyphicon-trash"></i>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <h4>No Record/s Found!</h4>
    <% end %>
  </div>
  <div class="box-footer">
    <div class="pull-right">
      <%= link_to new_project_time_extension_path(@project), class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-plus"></span>
        New Time Extension
      <% end %>
    </div>
  </div>
</div>
