<%= simple_form_for [@project, @manpower] do |f| %>
  <%= f.error_notification %>
<div class="box box-primary">
  <div class="box-header">
    <div class="box-title">
      <% if @manpower.new_record? %>
        New Manpower
      <% else %>
        Update Manpower Info
      <% end %>
    </div>
  </div>
  <div class="box-body">
    <div class="form-inputs">
      <%= f.input :project_engineer, label: 'Project Engineer:', placeholder: "please write fullname" %>
      <%= f.input :materials_engineer, label: 'Materials Engineer:', placeholder: "please write fullname" %>
      <%= f.input :project_foreman, label: 'Project Poorman:', placeholder: "please write fullname" %>
    </div>
  </div>
  <div class="box-footer">
    <div class="pull-left">
      <%= link_to :back, class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-chevron-left"></span>
        Back
      <% end %>
    </div>
    <div class="pull-right">
      <% if @manpower.new_record? %>
        <%= f.button :button, class: 'btn btn-success btn-sm' do %>
          <i class="glyphicon glyphicon-floppy-saved" aria-hidden="true"></i><span> Save</span>
        <% end %>
      <% else %>
        <%= f.button :button, class: 'btn btn-primary btn-sm' do %>
          <i class="glyphicon glyphicon-edit" aria-hidden="true"></i><span> Update</span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
