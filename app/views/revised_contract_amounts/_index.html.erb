
<div class="box box-primary">
  <div class="box-body">
    <% if @project.revised_contract_amounts.present? %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th style="text-align:center">Amount</th>
            <th style="text-align:center">Date Created</th>
            <th style="text-align:center">Date Updated</th>
            <th style="text-align:center"><i class="glyphicon glyphicon-cog"></th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @project.revised_contract_amounts) do |revised_contract_amount| %>
            <td style="text-align:center"><%= number_to_currency(revised_contract_amount.amount, unit: 'Php ') %></td>
            <td style="text-align:center"><%= revised_contract_amount.created_at %></td>
            <td style="text-align:center"><%= revised_contract_amount.updated_at %></td>  
            <td style="text-align:center">
              <%= link_to edit_revised_contract_amount_path(revised_contract_amount) do %>
                <i class="glyphicon glyphicon-edit"></i>
              <% end %>
              <span>&nbsp&nbsp&nbsp|&nbsp&nbsp&nbsp</span>
              <%= link_to revised_contract_amount, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </td>
          <% end %>
        </tbody>
      </table>
    </div>
    <% else %>
      <h4>No Record/s Found!</h4>
    <% end %>
  </div>
  <div class="box-footer"> 
    <div class="pull-right">
      <%= link_to new_project_revised_contract_amount_path(@project), class: 'btn btn-primary' do %>
        <span class="fa fa-plus"></span>
        New Revised Contract Amount
      <% end %>
    </div>
  </div>
</div>
