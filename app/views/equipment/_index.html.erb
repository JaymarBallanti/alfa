<div class="box box-primary">
  <div class="box-body">
    <% if @project.equipments.present? %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th style="text-align:center">Equipment Name</th>
            <th style="text-align:center">Equipment Type</th>
            <th style="text-align:center">Plate Number</th>
            <th style="text-align:center">Quantity</th>
            <th style="text-align:center">Date Created</th>
            <th style="text-align:center">Date Updated</th>
            <th style="text-align:center"><i class="fa fa-gear"></i></th>
          </tr>
        </thead>
        <tbody>
          <%= content_tag_for(:tr, @project.equipments) do |equipment| %>
            <td style="text-align:center"><%= equipment.equipment_name %></td>
            <td style="text-align:center"><%= equipment.equipment_type %></td>
            <td style="text-align:center"><%= equipment.plate_number %></td>
            <td style="text-align:center"><%= equipment.quantity %></td>
            <td style="text-align:center"><%= equipment.created_at %></td>
            <td style="text-align:center"><%= equipment.updated_at %></td>
            <td style="text-align:center">
              <%= link_to edit_equipment_path(equipment) do %>
                <i class="fa fa-edit"></i>
              <% end %>
                <span>&nbsp&nbsp&nbsp|&nbsp&nbsp&nbsp</span>
              <%= link_to equipment, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-trash"></i>
              <% end %>
            </td>
          <% end %>
        </tbody>
      </table>
    </div>
    <% else %>
      <h4>No Record/s Found!</h4>
    <% end %>
  </div>
  <div class="box-footer"> 
    <div class="pull-right">
      <%= link_to new_project_equipment_path(@project), class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-plus"></span>
        New Equipment
      <% end %>
    </div>
  </div>
</div>
